{% extends 'admin/layouts/layout.twig' %}

{% block body %}
    <div class="dashboard-ecommerce">
        <div class="container-fluid dashboard-content ">
            <!-- ============================================================== -->
            <!-- pageheader  -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="page-header">
                        <h2 class="pageheader-title">Post </h2>
                        <div class="page-breadcrumb">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Create</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>

            <div class="ecommerce-widget">

                <form action="/admin/post/" method="post" role="form" enctype="multipart/form-data">

                    <div class="form-group">
                        <label for="">Title</label>
                        <input type="text" class="form-control" name="title" id="" placeholder="Title">
                    </div>

                    <div class="form-group">
                        <label for="">Tag</label>
                        <input type="text" class="form-control" name="tag" id="" placeholder="Tag">
                    </div>

                    <div class="form-group">
                        <label for="">Body</label>
                        <textarea class="form-control" placeholder="Body Content" name="body"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="">Image</label>
                        <input type="file" class="form-control" name="image">
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
